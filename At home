function worldRecord(input){
    let recordInSeconds = Number(input[0]);
    let distance = Number(input[1]);
    let timeSwimForMeter = Number(input[2]);
    
    let swimAllDistance = distance * timeSwimForMeter
    //за колко време в секунди ще преплувам цялото разстояние
    
    let slowlyNumber = distance /15
    let slowlyInSeconds = slowlyNumber * 12.5
    
    resultSeconds = slowlyInSeconds + swimAllDistance
    
    if (resultSeconds < recordInSeconds){
        final = recordInSeconds - resultSeconds
        console.log(`No, he failed! He was ${final} seconds slower.`)
    }else{
        console.log(`Yes, he succeeded! The new world record is ${resultSeconds} seconds.`).
        
    }
    
}

function worldRecord(["10464","1500","20"])
